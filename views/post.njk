{% extends "layout.njk" %}
{% block  content %}
    <h1>Inlägg</h1>
    <ul>
        <li class="post">
            <div class="leftside">
                <b>Författar-ID:</b> {{ post[0][0].authorId }}<br>
                <b>Tid:</b> {{ post[0][0].createdAt  }}<br>
                <b>Titel:</b> {{ post[0][0].title }}<br>
                <b>Meddelande:</b> {{ post[0][0].content  }}<br>
            </div>
            <div class="line"></div>
            <div class="rightside">
                <h4>{{ post[0][0].id }}</h4>
            </div>
        </li>
    </ul>

    <h1>Kommentarer</h1>

    {% for row in comments[0] %}
        <ul class="commentflow">
            <li class="comment">
                <p><b>Användare:</b> {{ row.authorId }}</p>
                <p>{{ row.content }}</p>
            </li>
        </ul>
    {% endfor %}
{% endblock %}